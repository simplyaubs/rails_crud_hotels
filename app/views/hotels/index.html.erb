<%= form_for @hotel do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.submit 'Add hotel' %>
  </p>
<% end %>

<% @hotels.each do |hotel| %>
  <ul>
    <li>
      <%= link_to "#{hotel.name}", hotel_path(hotel) %>, <%= hotel.rating %>
    </li>
  </ul>
<% end %>